# EditorConfig is awesome: https://EditorConfig.org

[*.json]
indent_size = 2
indent_style = space

[*.ps1]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Dockerfile]
trim_trailing_whitespace = true
insert_final_newline = true
